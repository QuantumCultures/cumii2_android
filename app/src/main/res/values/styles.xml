<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.ToolBar">
        <item name="android:textColorPrimary">@color/black_87</item>
        <item name="android:background">@color/white</item>
        <!-- change menu icon -->
        <item name="colorControlNormal">@color/primary</item>
        <item name="actionMenuTextColor">@color/primary</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- change menu icon -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppText" parent="@android:style/TextAppearance">
    </style>

    <style name="AppText.Display1">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Display1</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="AppText.Headline">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Headline</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppText.Title">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppText.Subhead">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Subhead</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppText.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppText.Body.Light">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AppText.Caption">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Caption</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppText.Toolbar" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="AppButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppButton.Accent" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@color/accent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- ZWave -->
    <style name="ZWaveAppButtonInactive" parent="AppButton">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">#9E9E9E</item>
    </style>

    <style name="ZWaveAppButtonActive" parent="AppButton">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">#2E7D32</item>
    </style>

</resources>
